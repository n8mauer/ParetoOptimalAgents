# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_PROFILE=default

# Secrets Manager Configuration
# Set to "false" to disable AWS Secrets Manager and use environment variables only
USE_AWS_SECRETS_MANAGER=true

# LandingAI Configuration
ADE__API_KEY_SECRET_NAME=landingai/api_key
ADE__USE_SECRETS_MANAGER=false
ADE_API_KEY=   # If not using Secrets Manager
ADE__INPUT_FOLDER=./data/docs

# Option 2: Use environment variable directly (development/fallback)
#   - Set USE_AWS_SECRETS_MANAGER=false or ADE__USE_SECRETS_MANAGER=false
#   - Or if Secrets Manager lookup fails, this will be used as fallback

# Bedrock Configuration
# Can be overridden with environment variables
BEDROCK__MODEL_ID=us.anthropic.claude-sonnet-4-5-v2:0
BEDROCK__REGION=us-east-1
BEDROCK__MAX_TOKENS=1024
BEDROCK__TEMPERATURE=0.1

# LandingAI ADE input folder (local)
ADE__INPUT_FOLDER=./data/docs

# S3 Configuration for LandingAI processed documents
ADE__S3_BUCKET=econ-marl-data-processing
ADE__S3_PREFIX=landingai/processed/

# S3 Configuration for Training Outputs
OUTPUT__S3_BUCKET=econ-marl-data-processing
OUTPUT__S3_PREFIX=results/checkpoints/

# S3 Configuration for Data Storage
DATA__S3_BUCKET=econ-marl-data-processing
DATA__S3_PREFIX_PARQUET=data/parquet/
DATA__S3_PREFIX_RAW=data/raw/

# Training Configuration
TRAINING__EPISODES=
TRAINING__BATCH_SIZE=
TRAINING__LR_ACTOR=
TRAINING__LR_CRITIC=

# QMIX Configuration (Pareto Coordination)
# Set to false to use standard MADDPG without mixing
TRAINING__USE_QMIX=true
TRAINING__QMIX_EMBED_DIM=32
TRAINING__LR_MIXER=0.001

# General
LOG_LEVEL=INFO
OUTPUT__OUTPUT_DIR=./outputs

